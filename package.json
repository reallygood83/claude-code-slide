{
  "name": "@reallygood83/claude-slide-mcp",
  "version": "1.0.0",
  "description": "MCP server for AI-powered slide generation with perfect viewport optimization",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts"
  },
  "keywords": [
    "mcp",
    "claude",
    "slides",
    "presentation",
    "ai",
    "viewport-optimization"
  ],
  "author": "김문정 (reallygood83)",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "reveal.js": "^4.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "mcp": {
    "name": "Claude Slide Generator",
    "description": "Generate beautiful presentations from YouTube/Markdown with AI",
    "tools": [
      {
        "name": "generate_slides",
        "description": "Generate HTML slides from YouTube URL or Markdown file",
        "inputSchema": {
          "type": "object",
          "properties": {
            "source": {
              "type": "string",
              "description": "YouTube URL or Markdown file path"
            },
            "author": {
              "type": "string",
              "description": "Author name"
            },
            "organization": {
              "type": "string",
              "description": "Organization/Company name"
            },
            "theme": {
              "type": "string",
              "enum": ["business", "developer", "minimalist", "creative", "academic"],
              "description": "Slide theme (optional, auto-selected if not provided)"
            }
          },
          "required": ["source", "author", "organization"]
        }
      }
    ]
  }
}